  background: url('http://ylbb-business.oss-cn-beijing.aliyuncs.com/2020/1585303642158961.png') no-repeat center center;
  background-size: 66rpx auto;
  overflow: hidden;
  clear: both;
  float: left;
}
.uploadright image{
