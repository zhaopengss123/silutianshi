<view class='content'>
    <view class='item'>
        <text>参赛者姓名</text>
        <input placeholder='请输入参赛者的姓名' bindinput="nameInput" placeholder-style="color:#b0b0b0"></input>
    </view>
    <view class='item'>
        <text>参赛者年龄</text>
        <picker mode="date" value="{{ birthday }}" start="2004-01-01" end="2014-12-31" maxlength="20" bindchange="birthdayChange">
          <view class='select' wx:if="{{ birthday }}">{{ birthday }}</view>
          <view class='notSelect' wx:if="{{ !birthday }}">请选择参赛者出生年月（只接受5-15岁的小朋友报名）</view>
        </picker>
    </view>
    <view class='item'>
        <text>参赛者性别</text>
       <picker bindchange="sexChange" value="{{sexIndex}}" range="{{sexArray}}">
          <view class='select' wx:if="{{ sexArray[sexIndex] }}">{{ sexArray[sexIndex] }}</view>
          <view class='notSelect' wx:if="{{ !sexArray[sexIndex] }}">您与宝宝的关系</view>
        </picker>
    </view>
    <view class='item'>
        <text>监护人姓名</text>
        <input placeholder='请输入监护人的姓名' bindinput="parentsInput" placeholder-style="color:#b0b0b0"></input>
    </view>
    <view class='item'>
        <text>监护人电话</text>
        <input placeholder='请输入监护人的电话' bindinput="pphoneInput" placeholder-style="color:#b0b0b0"></input>
    </view>
    <view class='item'>
        <text>报名类目</text>
      <view> 
        <picker style="width:{{ childList.length ? 300 : 686  }}rpx; float:left;"  bindchange="typeChange" value="{{typeIndex}}" range="{{typeList}}" range-key="{{'type'}}">
          <view class='select' wx:if="{{ typeList[typeIndex] }}">{{ typeList[typeIndex].type }}</view>
          <view class='notSelect' wx:if="{{ !typeList[typeIndex] }}">请选择类目</view>
        </picker>

        <picker wx:if="{{ childList.length }}" style="width:300rpx; float:left; margin-left:10rpx;"  bindchange="childtypeChange" value="{{childtypeIndex}}" range="{{childList}}" range-key="{{'type'}}">
          <view class='select' wx:if="{{ childList[childtypeIndex] }}">{{ childList[childtypeIndex].type }}</view>
          <view class='notSelect' wx:if="{{ !childList[childtypeIndex] }}">请选择二级类目</view>
        </picker>
</view> 
    </view>
    <view class='item'>
        <text>地区选择</text>
        <view>
        <input class='province' placeholder='请选择省' disabled="true" value="{{jgName.province}}" placeholder-style="color:#b0b0b0"></input>

        <input class='province' placeholder='请选择市' disabled="true" value="{{jgName.city}}" placeholder-style="color:#b0b0b0"></input>
        
        <input class='province' placeholder='请选择区' disabled="true" value="{{jgName.area}}" placeholder-style="color:#b0b0b0"></input> 
       </view>               
    </view>
    <view class='item'>
        <text>报名机构</text>
        <input placeholder='请输入机构' disabled="true" value="{{jgName.name}}" placeholder-style="color:#b0b0b0"></input>
    </view> 
    <view class='submit' bindtap='submits'>提交报名资料</view>    
    <view class='submit index' bindtap='toIndex'>回到首页</view>                       
</view>

<view class='opensetting' wx:if="{{ setTingGet }}">
  <view>
  <text>获取您的用户名头像等信息</text>
  <button  open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button></view>
</view>