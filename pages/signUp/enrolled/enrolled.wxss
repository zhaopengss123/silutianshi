.page{
  width: 100%;
  height: 100%;
}
.content{
  margin-top: 30px;
}
.list{
  width: 710rpx;
  height: 212rpx;
  background: #fff;
  margin: 0 auto;
  box-shadow: 0px 0px 5px #999;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.list_main{
  width: 650rpx;
  margin: 0 auto;
  overflow: hidden;
}
.headimg{
  width: 104rpx;
  height: 104rpx;
  margin-top: 54rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.list_text{
  width: 504rpx;
  float: left;
  margin-left: 42rpx;
  font-size: 28rpx;
  color: #666;
}
.list_text view:first-child{
  margin-top: 54rpx;
}
.list_text view{
  margin-bottom: 5rpx;
}
.list_text text{
  float: right;
  color: rgba(194, 0, 0, .8);
}
.tobm{
  width:710rpx;
  margin: 0 auto;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  margin-top: 42rpx;
  color: #fff;
  background: #01a601;
  border-radius: 10rpx;
}
.noList{
  overflow: hidden;
  clear: both;
}
.noTitle{
  font-size: 48rpx;
  color: rgb(1, 1, 1);
  text-align: center;
  margin-top: 193rpx;
}
.noDesc{
  font-size: 24rpx;
  color: rgb(1, 1, 1);  
  margin-top: 28rpx;
  text-align: center;
}
.noBtn{
  width:564rpx;
  margin: 0 auto;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  margin-top: 248rpx;
  color: #fff;
  background: #01a601;
  border-radius: 10rpx;
}