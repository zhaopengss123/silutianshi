page{
  width: 100%;
  height: 100%;
}
.content{
  overflow: hidden;
  padding-bottom: 140rpx;
}
.store_img {
  width: 670rpx;
  height: 380rpx;
  position: relative;
}
.swiper-item,swiper{
  width: 750rpx;
  height: 380rpx;
}
