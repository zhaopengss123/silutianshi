.store_img>image {
  width: 750rpx;
  height: 380rpx;
}
.store_img text{
  display: block;
  width: 750rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: rgba(0, 0, 0, .5);
  color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 25rpx;
}

.mnue-list {
  width: 680rpx;
  margin: 0 auto;
  padding: 0 35rpx;
  background: #fff;
}

.mnue-list>view {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  border-bottom: solid 1px #EFF0F4;
  color: #373C41;
}

.mnue-list>view view {
  float: left;
}

.mnue-list>view view:last-child {
  float: right;
}


.openvip{
  width: 650rpx;
  border: solid 1rpx #ccc;
  border-radius: 15rpx;
  position: absolute;
  top: 220rpx;
  left: 50rpx;
  height: 120rpx;
  background: #fff;
  padding: 10rpx;
}
.vip_left{
  float: left;
  margin-left: 20rpx;
}
.vip_left view{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.vip_left view:last-child{
  color: #999;
  font-size: 25rpx;
}
.vip_right{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: solid 1px #ccc;
  float: right;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-right: 20rpx;
  font-size: 12px;
}
.mnue-list input,picker{
  width: 450rpx;
  height: 120rpx;
  font-size: 24rpx;
  text-align: right;
}
picker view{
  width: 100%;
}
.uploadcode{
  width: 680rpx;
  margin: 0 auto;
}
.uploadleft{
  font-size: 27rpx;
  margin-top: 40rpx;
}
.uploadleft>view:last-child{
  color: #999;
  font-size: 25rpx;
  margin-top: 5rpx;
}
.uploadright{
  width: 200rpx;
  height: 200rpx;
  border: solid 1px #EFF0F4;
  border-radius:30rpx;
  margin-top: 40rpx;
  background: url('http://ylbb-business.oss-cn-beijing.aliyuncs.com/2020/1585303642158961.png') no-repeat center center;
  background-size: 66rpx auto;
  overflow: hidden;
}
.uploadright image{
  width: 200rpx;
  height: 200rpx;
}
.add_icon{
  width: 100%;
  text-align: center;
  font-size: 100rpx;
  color: #999;
}
.add_text{
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #999;
}
.submit{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
  background: #FFC41F;
  font-size: 32rpx;
  color: #373C41;
  z-index: 9;
}
.pos{
  position: relative;
}
.mune-main.mune-main{
  width: 750rpx;
  background: #fff;
  z-index: 4;
  border-bottom: solid 1px #f0f0f0;
  overflow: hidden;
  height: auto;
}
.listMune{
  padding: 10rpx 0;
  font-size: 32rpx;
}
.listMune:nth-child(odd){
  background: #EFF0F4;
}
.listMune.listMune,.listMune.listMune view{
  display: block;
  clear: both;
  width: 100%;
  height: auto;
  line-height: normal;
  text-indent: 50rpx;
}
.showaddress{
  width: 100%;
  height: 100%;
  overflow-y: auto; 
  position: fixed;
  top: 0;
  left: 0;
  background:rgba(0, 0, 0, .5);
  z-index: 10;
}
.showaddress input{
  width: 570rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  font-size: 28rpx;
  padding-left: 50rpx;
  float: left;
  border-top: solid 2rpx #EFF0F4;
}
.address_submit{
  width: 130rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #FFC41F;
  font-size: 32rpx;
  color: #373C41;
  float: left;
  border-top: solid 2rpx #EFF0F4;
}