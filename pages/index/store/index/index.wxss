.banner{
  width: 750rpx;
  height: 380rpx;
  overflow: hidden;
  position: relative;
}
.banner image{
  width: 100%;
  height: 100%;
}
.bannerShare{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #373C41;
  font-size: 28rpx;
  background: #FFC41F;
  position: absolute;
  right: 0;
  bottom: 24rpx;
  border-radius:50rpx 0px 0px 50rpx; 
}
.storeDetail{
  width: 670rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  padding-bottom: 38rpx;
  border-bottom: solid 2rpx #EFF0F4;
}
.storeName{
  color: #373C41;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
}
.distance{
  color: #C3CDD7;
  font-size: 20rpx;
  margin-top: 10rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/branch-store/dwj3nxllnbnmxs34.png') no-repeat left;
  background-size: auto 28rpx;
  text-indent: 42rpx;
}
.address{
  color: #919BA5;
  font-size: 24rpx;
  overflow: hidden;
}
.address>text{
  float: left;
  margin-top: 10rpx;
}
.right-icon{
  float: right;
}
.right-icon>image:nth-child(1){
  width: 56rpx;
  height: 44rpx;
  float: left;
}
.right-icon>image:nth-child(3){
  width: 44rpx;
  height: 44rpx;
  float: left;
}
.right-icon>text{
  width: 2rpx;
  height: 40rpx;
  float: left;
  background: #DCE1EB;
  margin: 4rpx 30rpx;
}
.tit-name{
  color: #222222;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/branch-store/tit-icon-dsju6984730i.png') no-repeat center left;
  background-size: 38rpx 38rpx;
  text-indent: 52rpx;
}
.listmain{
  width: 682rpx;
  margin: 0 auto;
  overflow: hidden;
  padding-bottom: 40rpx;
  border-bottom: solid 2rpx #EFF0F4;
}
.nolist{
  color: #919BA5;
  font-size: 24rpx;
  text-align: center;
  margin-top: 40rpx;
}
.use.use{
  padding-bottom: 20rpx;
}
.use-detail{
  margin-top: 20rpx;
}
.use-detail image{
  width: 100%;
}
.list-d{
  margin-top: 40rpx;
  overflow: hidden;
  width: 670rpx;
}
.list-tit{
  color: #373C41;
  font-size: 28rpx;
}
.list-img{
  margin-top: 40rpx;
}
.list-img image{
  width: 202rpx;
  height: 202rpx;
  float: left;
  margin-right: 32rpx;
  margin-bottom: 32rpx;
  border-radius:30rpx;
}
.list-img image:nth-child(3n){
  margin-right: 0;
}
.activeList{
  width: 670rpx;
  margin: 0 auto;
  overflow: hidden;
}
.activeList>view{
  overflow: hidden;
  padding: 40rpx 0;
}
.activeList>view>image{
  width: 160rpx;
  float: left;
  height: 100rpx;
  border-radius: 10rpx;
}
.active-text{
  float: left;
  margin-left: 20rpx;
}
.active-text>text{
  display: block;
  color: #373C41;
  font-size: 28rpx;
  width: 340rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.active-text>view{
  margin-top: 6rpx;
}
.active-text>view>text{
  color: #FF3F00;
  font-size: 32rpx;
  font-weight: bolder;
}
.active-text>view>text:nth-child(2){
  font-size: 42rpx;
}
.active-text>view>text:nth-child(3){
  font-size: 22rpx;
  color: #919BA5;
  font-weight: normal;
  text-decoration: line-through;
}
.active-btn{
  width: 152rpx;
  height: 60rpx;
  float: right;
  border-radius: 55rpx;
  line-height: 60rpx;
  text-align: center;
  color: #373C41;
  font-size: 28rpx;
  background: #FFC41F;
}