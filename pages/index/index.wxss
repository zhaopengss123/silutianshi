.right{
  width: 350rpx;
  height: 380rpx;
  float: left;
  background: #FAFAFA;
  border: solid 3rpx #EFF0F4;
  border-left: none;
  color: #9B9B9B;
  font-size: 28rpx;
  border-radius:0px 20rpx 14rpx 0px;
  margin-top: 76rpx;
}
.right text{
  display: block;
  width: 308rpx;
  margin: 0 auto;
}
.right text:nth-child(1){
  margin-top: 34rpx;
}
.userinfo{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0;
}
.creatTime.creatTime.creatTime{
  width: auto;
  height: 124rpx;
  line-height: 124rpx;
  position: absolute;
  top: 0;
  right: 0;
