image{
  width: 100%;
  height: 100%;
}
.header{
  overflow: hidden;
  border-bottom: solid 2rpx #EFF0F4;
  border-top: solid 2rpx #EFF0F4;
}
.header image{
  width: 160rpx;
  height: 100rpx;
  float: left;
  border-radius: 10rpx;
  padding: 30rpx 20rpx;
  margin-left: 20rpx;
}
.activity-right{
  width: 308rpx;
  float: left;
  padding: 30rpx 0;
  color: #373C41;
  font-size: 28rpx;
  overflow: hidden;
}
.activity-right text:nth-child(1){
  width: 308rpx;
  height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
}
.activity-right text:nth-child(2){
  background: #FD704F;
  width: 84rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius:50rpx;
  color: #fff;
  font-size: 20rpx;
  margin-top: 26rpx;
  display: block;
}
.activity-right text.active:nth-child(2){
  color: #333;
  background: #ccc;
}
.activity-total{
  width: 200rpx;
  height: 160rpx;
  background: #FAFAFA;
  color: #919BA5;
  font-size: 24rpx;
  text-align: center;
  float: right;
  margin-left: 20rpx;
}
.activity-total text:nth-child(1){
  display: block;
  margin-top: 42rpx;
}
.activity-total text:nth-child(2){
  display: block;
  color: #373C41;
  font-size: 40rpx;
  font-weight: bolder;
}


.nav{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #FAFAFA;
  color: #4A4A4A;
  font-size: 24rpx;
}
.nav>view,.detail>view{
  float: left;

}
.nav>view:nth-child(1),.detail>view:nth-child(1){
  margin-left: 40rpx;
  width: 174rpx;
}
.detail>view:nth-child(1){
  margin-left: 0;
}

.nav>view:nth-child(2),.detail>view:nth-child(2){
  width: 284rpx;
}
.nav>view:nth-child(3),.detail>view:nth-child(3){
  width: 140rpx;
}
.detail{
  color: #373C41;
  font-size: 24rpx;
}
.detail text{
  display: block;
}

.detail{
  width: 670rpx;
  margin: 0 auto;
  padding: 28rpx 0;
  border-bottom: solid 1rpx #EFF0F4;
  overflow: hidden;
}
