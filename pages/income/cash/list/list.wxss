/* pages/income/cash/list/list.wxss */
.nav{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #FAFAFA;
  color: #4A4A4A;
  font-size: 24rpx;
}
.nav>view,.detail>view{
  float: left;

}
.nav>view:nth-child(1),.detail>view:nth-child(1){
  margin-left: 40rpx;
  width: 174rpx;
}
.detail>view:nth-child(1){
  margin-left: 0;
}

.nav>view:nth-child(2),.detail>view:nth-child(2){
  width: 284rpx;
}
.nav>view:nth-child(3),.detail>view:nth-child(3){
  width: 140rpx;
}
.detail{
  color: #373C41;
  font-size: 24rpx;
}
.detail text{
  display: block;
}

.detail{
  width: 670rpx;
  margin: 0 auto;
  padding: 28rpx 0;
  border-bottom: solid 1rpx #EFF0F4;
  overflow: hidden;
}