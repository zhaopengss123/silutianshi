<view class='content'>
     <view class='detail_main'>
        <!-- 列表 -->
          <view class='list' wx:for="{{ list }}">
              <image src='http://ylbb-app-mobile01.oss-cn-beijing.aliyuncs.com/929bd495-7fe1-4de2-b0ee-de7d85138cf8.jpg'></image>

         <view class='list_font'>
           <view class='sf'> <text>姓名：{{ item.xuanshou }}</text> <text>类目：{{ item.type }}</text> </view>
            <view class='pf'> <text>现场：{{ item.livenum? item.livenum:0 }}</text><text>网络：{{item.linenum?item.linenum:0}}</text><text>总分：{{ item.allnum?item.allnum:0 }}</text> </view>
        </view>

          </view>

        <view class='noList' wx:if="{{ !list.length }}">
            <view class='noTitle'>暂时没有关注任何的视频哦~</view>
            <view class='noDesc'>点击观看视频去关注您喜欢的视频吧！</view>
            <view class='noBtn'  bindtap='toIndex'>观看视频</view>
        </view>

    </view>
</view>
